<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sakinah - Platform Undangan Digital</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Great+Vibes&family=Lato:wght@300;400;700&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        brand: {
                            gold: '#C5A059',
                            rose: '#E6B8B8',
                            dark: '#2C3E50',
                            light: '#F9F7F2'
                        }
                    },
                    fontFamily: {
                        script: ['"Great Vibes"', 'cursive'],
                        serif: ['"Playfair Display"', 'serif'],
                        sans: ['"Lato"', 'sans-serif'],
                        cinzel: ['"Cinzel"', 'serif']
                    }
                }
            }
        }
    </script>

    <style>
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-fade-in {
            animation: fadeIn 0.8s ease-out forwards;
        }
        html { scroll-behavior: smooth; }
        .invitation-container {
            background-image: url('https://images.unsplash.com/photo-1519225421980-715cb0202128?q=80&w=2000&auto=format&fit=crop');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
        }
        .glass-panel {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.5);
        }
        .timeline-line {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            width: 2px;
            height: 100%;
            background-color: #C5A059;
            z-index: 0;
        }
    </style>
</head>
<body class="bg-brand-light text-brand-dark font-sans overflow-x-hidden">

    <!-- Notifikasi Error (Jika ada dari server) -->
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="fixed top-5 right-5 z-50 bg-red-500 text-white px-6 py-3 rounded shadow-lg animate-fade-in">
            <i class="fas fa-exclamation-circle mr-2"></i> <%= error %>
        </div>
    <% } %>

    <!-- ================= MODE: AUTH (LOGIN/REGISTER) ================= -->
    <% if (mode === 'auth') { %>
    <section class="min-h-screen flex items-center justify-center p-4 bg-[url('https://images.unsplash.com/photo-1469334031218-e382a71b716b?q=80&w=1470&auto=format&fit=crop')] bg-cover bg-center">
        <div class="absolute inset-0 bg-black/40 backdrop-blur-sm"></div>
        
        <div class="bg-white/95 p-8 rounded-2xl shadow-2xl w-full max-w-md relative z-10 animate-fade-in">
            <div class="text-center mb-8">
                <h1 class="font-script text-5xl text-brand-gold mb-2">Sakinah</h1>
                <p class="text-gray-500 text-sm tracking-widest uppercase">Platform Undangan Pernikahan Digital</p>
            </div>

            <!-- Tombol Toggle Login/Register -->
            <div class="flex mb-6 bg-gray-100 rounded-lg p-1">
                <button onclick="toggleAuth('login')" id="btn-login" class="flex-1 py-2 rounded-md text-sm font-bold bg-white shadow-sm text-brand-dark transition-all">Masuk</button>
                <button onclick="toggleAuth('register')" id="btn-register" class="flex-1 py-2 rounded-md text-sm font-bold text-gray-500 hover:text-brand-dark transition-all">Daftar</button>
            </div>

            <!-- Form Login -->
            <form id="login-form" action="/login" method="POST" class="space-y-4 <%= (typeof section !== 'undefined' && section === 'register') ? 'hidden' : '' %>">
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Email</label>
                    <input type="email" name="email" required class="w-full px-4 py-2 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-brand-gold">
                </div>
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Password</label>
                    <input type="password" name="password" required class="w-full px-4 py-2 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-brand-gold">
                </div>
                <button type="submit" class="w-full bg-brand-dark text-white py-3 rounded-lg font-bold hover:bg-gray-800 transition-colors shadow-lg">Masuk</button>
            </form>

            <!-- Form Register -->
            <form id="register-form" action="/register" method="POST" class="space-y-4 <%= (typeof section !== 'undefined' && section === 'register') ? '' : 'hidden' %>">
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Nama Lengkap</label>
                    <input type="text" name="name" required class="w-full px-4 py-2 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-brand-gold">
                </div>
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Email</label>
                    <input type="email" name="email" required class="w-full px-4 py-2 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-brand-gold">
                </div>
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Password</label>
                    <input type="password" name="password" required class="w-full px-4 py-2 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-brand-gold">
                </div>
                <button type="submit" class="w-full bg-brand-gold text-white py-3 rounded-lg font-bold hover:bg-yellow-600 transition-colors shadow-lg">Buat Akun</button>
            </form>
        </div>
    </section>

    <script>
        function toggleAuth(type) {
            const loginForm = document.getElementById('login-form');
            const regForm = document.getElementById('register-form');
            const btnLogin = document.getElementById('btn-login');
            const btnReg = document.getElementById('btn-register');
            
            if(type === 'login') {
                loginForm.classList.remove('hidden');
                regForm.classList.add('hidden');
                btnLogin.classList.add('bg-white', 'shadow-sm', 'text-brand-dark');
                btnLogin.classList.remove('text-gray-500');
                btnReg.classList.remove('bg-white', 'shadow-sm', 'text-brand-dark');
                btnReg.classList.add('text-gray-500');
            } else {
                loginForm.classList.add('hidden');
                regForm.classList.remove('hidden');
                btnReg.classList.add('bg-white', 'shadow-sm', 'text-brand-dark');
                btnReg.classList.remove('text-gray-500');
                btnLogin.classList.remove('bg-white', 'shadow-sm', 'text-brand-dark');
                btnLogin.classList.add('text-gray-500');
            }
        }
    </script>
    <% } %>

    <!-- ================= MODE: DASHBOARD ================= -->
    <% if (mode === 'dashboard') { %>
    <section class="min-h-screen bg-gray-50">
        <!-- Navbar -->
        <nav class="bg-white shadow-sm sticky top-0 z-40">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <span class="font-script text-3xl text-brand-gold mr-2">Sakinah</span>
                    </div>
                    <div class="flex items-center space-x-4">
                        <span class="text-sm font-medium text-gray-600">Halo, <%= user.name %></span>
                        <a href="/" class="text-sm text-red-500 hover:text-red-700 font-bold">Keluar</a>
                    </div>
                </div>
            </div>
        </nav>

        <main class="max-w-7xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
            <div class="md:flex md:items-center md:justify-between mb-8">
                <div class="flex-1 min-w-0">
                    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">Dashboard Undangan</h2>
                    <p class="mt-1 text-sm text-gray-500">Kelola semua undangan pernikahan digital Anda.</p>
                </div>
                <div class="mt-4 flex md:mt-0 md:ml-4">
                    <a href="/create?user_id=<%= user.id %>" class="ml-3 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-brand-gold hover:bg-yellow-600 focus:outline-none">
                        <i class="fas fa-plus mr-2"></i> Buat Undangan Baru
                    </a>
                </div>
            </div>

            <% if (invitations.length === 0) { %>
                <div class="text-center py-20 bg-white rounded-lg border-2 border-dashed border-gray-300">
                    <i class="fas fa-heart text-4xl text-gray-300 mb-4"></i>
                    <h3 class="mt-2 text-sm font-medium text-gray-900">Belum ada undangan</h3>
                    <p class="mt-1 text-sm text-gray-500">Mulai buat undangan pernikahan impian Anda sekarang.</p>
                </div>
            <% } else { %>
                <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
                    <% invitations.forEach(inv => { 
                        const dateObj = new Date(inv.event_date);
                        const dateStr = dateObj.toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' });
                    %>
                    <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-100 hover:shadow-md transition-shadow">
                        <div class="px-4 py-5 sm:p-6">
                            <h3 class="text-lg leading-6 font-medium text-brand-gold font-serif">
                                <%= inv.groom_nick %> & <%= inv.bride_nick %>
                            </h3>
                            <div class="mt-2 max-w-xl text-sm text-gray-500">
                                <p><i class="far fa-calendar mr-2"></i> <%= dateStr %></p>
                                <p class="mt-1 truncate"><i class="fas fa-map-marker-alt mr-2"></i> <%= inv.location %></p>
                            </div>
                            <div class="mt-5 text-sm flex space-x-2 items-center">
                                <a href="/u/<%= inv.id %>" target="_blank" class="flex-1 text-center px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                                    <i class="fas fa-eye text-brand-dark"></i> Lihat
                                </a>
                                <button onclick="openShareModal('<%= inv.id %>', '<%= inv.groom_nick %>', '<%= inv.bride_nick %>')" class="flex-1 px-3 py-2 border border-transparent rounded-md text-sm font-medium text-white bg-green-600 hover:bg-green-700">
                                    <i class="fas fa-share-alt"></i> Share
                                </button>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            <% } %>
        </main>
    </section>

    <!-- Modal Share -->
    <div id="share-modal" class="fixed inset-0 z-[60] hidden overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" onclick="closeShareModal()"></div>
            <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6">
                <div>
                    <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
                        <i class="fas fa-share-alt text-green-600"></i>
                    </div>
                    <div class="mt-3 text-center sm:mt-5">
                        <h3 class="text-lg leading-6 font-medium text-gray-900">Bagikan Undangan</h3>
                        <p class="text-sm text-gray-500 mt-2">Salin link di bawah atau kirim langsung via WhatsApp.</p>
                        <div class="mt-4 flex rounded-md shadow-sm">
                            <input type="text" id="share-input-url" readonly class="focus:ring-brand-gold focus:border-brand-gold flex-1 block w-full rounded-none rounded-l-md sm:text-sm border-gray-300 px-3 py-2 bg-gray-50">
                            <button type="button" onclick="copyLink()" class="-ml-px relative inline-flex items-center space-x-2 px-4 py-2 border border-gray-300 text-sm font-medium rounded-r-md text-gray-700 bg-gray-50 hover:bg-gray-100">
                                <i class="fas fa-copy"></i>
                                <span>Salin</span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="mt-5 sm:mt-6 sm:grid sm:grid-cols-2 sm:gap-3 sm:grid-flow-row-dense">
                    <button type="button" onclick="shareToWA()" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-green-600 text-base font-medium text-white hover:bg-green-700 sm:col-start-2 sm:text-sm">
                        <i class="fab fa-whatsapp mr-2 mt-1"></i> WhatsApp
                    </button>
                    <button type="button" onclick="closeShareModal()" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 sm:mt-0 sm:col-start-1 sm:text-sm">
                        Tutup
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let activeShareData = null;
        function openShareModal(id, groom, bride) {
            activeShareData = { groom, bride };
            const url = window.location.origin + '/u/' + id;
            document.getElementById('share-input-url').value = url;
            document.getElementById('share-modal').classList.remove('hidden');
        }
        function closeShareModal() {
            document.getElementById('share-modal').classList.add('hidden');
            activeShareData = null;
        }
        function copyLink() {
            const input = document.getElementById('share-input-url');
            input.select();
            input.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(input.value).then(() => {
                alert('Link berhasil disalin!');
            });
        }
        function shareToWA() {
            if (!activeShareData) return;
            const url = document.getElementById('share-input-url').value;
            const msg = `Undangan Pernikahan ${activeShareData.groom} & ${activeShareData.bride}. \n\nSilakan buka link berikut: ${url}`;
            window.open(`https://wa.me/?text=${encodeURIComponent(msg)}`, '_blank');
        }
    </script>
    <% } %>

    <!-- ================= MODE: CREATE (FORM UNDANGAN DENGAN UPLOAD FILE) ================= -->
    <% if (mode === 'create') { %>
    <section class="min-h-screen bg-white">
        <nav class="bg-white border-b sticky top-0 z-40">
            <div class="max-w-7xl mx-auto px-4 h-16 flex items-center justify-between">
                <a href="/?user_id=<%= user.id %>" class="text-gray-500 hover:text-brand-dark flex items-center">
                    <i class="fas fa-arrow-left mr-2"></i> Kembali
                </a>
                <h1 class="font-bold text-lg">Buat Undangan Baru</h1>
                <div class="w-20"></div> 
            </div>
        </nav>

        <div class="max-w-3xl mx-auto py-10 px-4">
            <!-- PENTING: enctype="multipart/form-data" ditambahkan agar form bisa mengirim file -->
            <form action="/create" method="POST" enctype="multipart/form-data" class="space-y-8">
                <input type="hidden" name="user_id" value="<%= user.id %>">
                
                <!-- Section: Mempelai -->
                <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm">
                    <h3 class="text-lg font-bold text-brand-dark mb-4 border-b pb-2"><i class="fas fa-user-friends mr-2 text-brand-gold"></i> Data Mempelai</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Mempelai Pria (Lengkap)</label>
                            <input type="text" name="groomName" required class="w-full px-3 py-2 border rounded-md focus:ring-brand-gold" placeholder="Muhammad Rizky">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Nama Panggilan Pria</label>
                            <input type="text" name="groomNick" required class="w-full px-3 py-2 border rounded-md focus:ring-brand-gold" placeholder="Rizky">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Mempelai Wanita (Lengkap)</label>
                            <input type="text" name="brideName" required class="w-full px-3 py-2 border rounded-md focus:ring-brand-gold" placeholder="Siti Aisyah">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Nama Panggilan Wanita</label>
                            <input type="text" name="brideNick" required class="w-full px-3 py-2 border rounded-md focus:ring-brand-gold" placeholder="Aisyah">
                        </div>
                    </div>
                </div>

                <!-- Section: Love Story -->
                <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm">
                    <h3 class="text-lg font-bold text-brand-dark mb-4 border-b pb-2"><i class="fas fa-heart mr-2 text-brand-gold"></i> Love Story</h3>
                    <p class="text-sm text-gray-500 mb-4">Ceritakan momen spesial kalian (Maks 3 momen).</p>
                    
                    <% for(let i=1; i<=3; i++) { %>
                    <div class="mb-4 bg-gray-50 p-4 rounded-lg border border-gray-100">
                        <div class="grid grid-cols-3 gap-2 mb-2">
                            <div class="col-span-1">
                                <label class="block text-xs font-bold text-gray-500 mb-1">Tahun</label>
                                <input type="text" name="story_year_<%=i%>" placeholder="Ex: 2020" class="w-full px-3 py-2 border rounded-md text-sm">
                            </div>
                            <div class="col-span-2">
                                <label class="block text-xs font-bold text-gray-500 mb-1">Judul Momen</label>
                                <input type="text" name="story_title_<%=i%>" placeholder="Ex: Pertama Bertemu" class="w-full px-3 py-2 border rounded-md text-sm">
                            </div>
                        </div>
                        <label class="block text-xs font-bold text-gray-500 mb-1">Cerita Singkat</label>
                        <textarea name="story_content_<%=i%>" rows="2" placeholder="Ceritakan sedikit..." class="w-full px-3 py-2 border rounded-md text-sm"></textarea>
                    </div>
                    <% } %>
                </div>

                <!-- Section: Galeri Foto (INPUT UPLOAD FILE) -->
                <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm">
                    <h3 class="text-lg font-bold text-brand-dark mb-4 border-b pb-2"><i class="fas fa-camera mr-2 text-brand-gold"></i> Galeri Foto</h3>
                    <p class="text-sm text-gray-500 mb-4">Upload foto prewedding atau momen berdua (Format: JPG/PNG, Max 2MB).</p>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <% const labels = ['Foto 1 (Utama)', 'Foto 2 (Landscape)', 'Foto 3 (Square)', 'Foto 4 (Portrait)']; %>
                        <% for(let i=1; i<=4; i++) { %>
                            <div>
                                <label class="block text-xs font-bold text-gray-600 uppercase mb-1"><%= labels[i-1] %></label>
                                <!-- INPUT TYPE FILE -->
                                <input type="file" name="gallery_<%=i%>" accept="image/*" class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-brand-gold file:text-white hover:file:bg-yellow-600"/>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Section: Acara -->
                <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm">
                    <h3 class="text-lg font-bold text-brand-dark mb-4 border-b pb-2"><i class="fas fa-calendar-alt mr-2 text-brand-gold"></i> Detail Acara</h3>
                    <div class="grid grid-cols-1 gap-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Tanggal & Waktu Akad</label>
                            <input type="datetime-local" name="eventDate" required class="w-full px-3 py-2 border rounded-md focus:ring-brand-gold">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Lokasi / Gedung</label>
                            <textarea name="location" rows="2" required class="w-full px-3 py-2 border rounded-md focus:ring-brand-gold" placeholder="Alamat lengkap lokasi pernikahan..."></textarea>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Pesan / Quote (Opsional)</label>
                            <textarea name="message" rows="3" class="w-full px-3 py-2 border rounded-md focus:ring-brand-gold" placeholder="Ayat suci atau kata mutiara..."></textarea>
                        </div>
                    </div>
                </div>

                <div class="flex justify-end pt-4">
                    <button type="submit" class="px-8 py-3 bg-brand-gold text-white font-bold rounded-lg shadow-lg hover:bg-yellow-600 transition-all transform hover:-translate-y-1">
                        Simpan & Buat Undangan
                    </button>
                </div>
            </form>
        </div>
    </section>
    <% } %>

    <!-- ================= MODE: VIEW PUBLIC (HASIL UNDANGAN) ================= -->
    <% if (mode === 'view') { 
        const inv = invitation; 
        const dateObj = new Date(inv.event_date);
        const days = ['Minggu', 'Senin', 'Selasa', 'Rabu', 'Kamis', 'Jumat', 'Sabtu'];
        const months = ['Januari', 'Februari', 'Maret', 'April', 'Mei', 'Juni', 'Juli', 'Agustus', 'September', 'Oktober', 'November', 'Desember'];
        const dayName = days[dateObj.getDay()];
        const monthName = months[dateObj.getMonth()];
        const fullDate = `${dateObj.getDate()} ${monthName} ${dateObj.getFullYear()}`;
    %>
    <section class="fixed inset-0 z-50 overflow-y-auto bg-white">
        <!-- Hero Section -->
        <div class="min-h-screen relative flex items-center justify-center text-center px-4 invitation-container">
            <div class="absolute inset-0 bg-black/30"></div>
            <div class="glass-panel p-10 rounded-3xl max-w-2xl w-full relative z-10 animate-fade-in border-t-4 border-brand-gold">
                <p class="font-sans text-sm tracking-[0.3em] uppercase mb-4 text-gray-700">The Wedding Of</p>
                
                <div class="my-8">
                    <h1 class="font-script text-6xl md:text-8xl text-brand-dark mb-2"><%= inv.groom_nick %></h1>
                    <div class="font-script text-4xl text-brand-gold my-2">&</div>
                    <h1 class="font-script text-6xl md:text-8xl text-brand-dark mt-2"><%= inv.bride_nick %></h1>
                </div>

                <div class="flex items-center justify-center space-x-4 mb-8">
                    <div class="h-[1px] w-12 bg-gray-400"></div>
                    <p class="font-serif italic text-lg text-gray-800"><%= fullDate %></p>
                    <div class="h-[1px] w-12 bg-gray-400"></div>
                </div>

                <p class="text-xs text-gray-500 uppercase tracking-widest">Kami Mengundang Anda Untuk Hadir</p>
                
                <div class="mt-8 animate-bounce">
                    <i class="fas fa-chevron-down text-brand-gold text-2xl"></i>
                </div>
            </div>
        </div>

        <!-- Details Section -->
        <div class="bg-brand-light py-20 px-4">
            <div class="max-w-4xl mx-auto text-center">
                <img src="https://cdn-icons-png.flaticon.com/512/2827/2827620.png" class="w-16 h-16 mx-auto mb-6 opacity-60" alt="Bismillah">
                
                <p class="font-serif italic text-gray-600 mb-8 max-w-2xl mx-auto leading-relaxed">
                    "Dan di antara tanda-tanda (kebesaran)-Nya ialah Dia menciptakan pasangan-pasangan untukmu dari jenismu sendiri, agar kamu cenderung dan merasa tenteram kepadanya, dan Dia menjadikan di antaramu rasa kasih dan sayang."
                    <br><span class="text-sm font-bold not-italic mt-2 block">(QS. Ar-Rum: 21)</span>
                </p>

                <% if (inv.message) { %>
                    <p class="text-gray-600 italic mb-12">"<%= inv.message %>"</p>
                <% } %>

                <div class="grid md:grid-cols-2 gap-10 mt-12">
                    <div class="bg-white p-8 rounded-lg shadow-sm border border-gray-100 transform hover:-translate-y-2 transition-transform duration-300">
                        <div class="w-20 h-20 bg-brand-light rounded-full flex items-center justify-center mx-auto mb-4">
                            <i class="fas fa-user-tie text-3xl text-brand-dark"></i>
                        </div>
                        <h2 class="font-cinzel text-xl font-bold text-brand-gold mb-2"><%= inv.groom_name %></h2>
                        <p class="text-sm text-gray-500">Mempelai Pria</p>
                    </div>
                    <div class="bg-white p-8 rounded-lg shadow-sm border border-gray-100 transform hover:-translate-y-2 transition-transform duration-300">
                        <div class="w-20 h-20 bg-brand-light rounded-full flex items-center justify-center mx-auto mb-4">
                            <i class="fas fa-user text-3xl text-brand-dark"></i>
                        </div>
                        <h2 class="font-cinzel text-xl font-bold text-brand-gold mb-2"><%= inv.bride_name %></h2>
                        <p class="text-sm text-gray-500">Mempelai Wanita</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Love Story Section -->
        <% if (inv.love_story && inv.love_story.length > 0) { %>
        <div class="py-20 bg-white px-4">
            <div class="max-w-4xl mx-auto">
                <h2 class="font-script text-4xl text-center text-brand-gold mb-12">Love Story</h2>
                <div class="relative py-4">
                    <div class="timeline-line"></div>
                    <% inv.love_story.forEach((story, idx) => { 
                        const isLeft = idx % 2 === 0;
                    %>
                    <div class="relative z-10 mb-8 w-full flex <%= isLeft ? 'justify-start' : 'justify-end' %>">
                        <div class="w-5/12 <%= isLeft ? 'text-right pr-4' : 'text-left pl-4 order-2' %>">
                            <span class="inline-block px-3 py-1 bg-brand-gold text-white text-xs font-bold rounded-full mb-2"><%= story.year %></span>
                            <h4 class="font-cinzel font-bold text-gray-800 text-lg"><%= story.title %></h4>
                            <p class="text-sm text-gray-500 mt-1"><%= story.content %></p>
                        </div>
                        <div class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-white border-4 border-brand-gold rounded-full mt-1"></div>
                        <div class="w-5/12 <%= isLeft ? 'order-2' : '' %>"></div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Event Detail -->
        <div class="py-20 bg-brand-dark text-white text-center px-4 relative overflow-hidden">
            <div class="absolute inset-0 opacity-10 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>
            <div class="relative z-10 max-w-3xl mx-auto">
                <h2 class="font-script text-5xl mb-10 text-brand-gold">Save The Date</h2>
                
                <div class="bg-white/10 backdrop-blur-md p-8 rounded-xl border border-white/20 inline-block w-full max-w-md">
                    <div class="text-4xl font-serif font-bold mb-2"><%= dayName %></div>
                    <div class="text-xl tracking-widest uppercase mb-6"><%= fullDate %></div>
                    
                    <div class="h-[1px] w-full bg-brand-gold/50 my-6"></div>
                    
                    <div class="space-y-4">
                        <div>
                            <h3 class="font-bold text-brand-gold">AKAD & RESEPSI</h3>
                            <p><%= dateObj.toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' }) %> WIB - Selesai</p>
                        </div>
                        <div>
                            <h3 class="font-bold text-brand-gold mt-4">LOKASI</h3>
                            <p class="px-4"><%= inv.location %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gallery Section -->
        <% if (inv.gallery && inv.gallery.length > 0) { %>
        <div class="py-20 bg-brand-light px-4">
            <div class="max-w-5xl mx-auto">
                <h2 class="font-script text-4xl text-center text-brand-gold mb-12">Galeri Prewedding</h2>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    <% inv.gallery.forEach((url, index) => { 
                        const spanClass = (index === 0) ? 'col-span-2 row-span-2' : 'col-span-1 row-span-1';
                    %>
                    <div class="relative overflow-hidden rounded-lg shadow-sm group <%= spanClass %>">
                        <img src="<%= url %>" alt="Gallery <%= index+1 %>" class="w-full h-full object-cover transform transition-transform duration-500 group-hover:scale-110">
                        <div class="absolute inset-0 bg-black/20 group-hover:bg-black/0 transition-all"></div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Footer -->
        <div class="bg-white py-8 text-center text-xs text-gray-400">
            <p>&copy; 2024 Sakinah Invitation. Dibuat dengan Cinta.</p>
        </div>
    </section>
    <% } %>

</body>
</html>
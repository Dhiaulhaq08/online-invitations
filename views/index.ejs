<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sakinah - Admin Dashboard</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Config Tailwind Custom -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        brand: { gold: '#C5A059', rose: '#E6B8B8', dark: '#2C3E50', light: '#F9F7F2' }
                    },
                    fontFamily: {
                        script: ['"Great Vibes"', 'cursive'],
                        serif: ['"Playfair Display"', 'serif'],
                        sans: ['"Lato"', 'sans-serif'],
                        cinzel: ['"Cinzel"', 'serif']
                    }
                }
            }
        }
    </script>
    <style>.animate-fade-in { animation: fadeIn 0.8s ease-out forwards; } @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }</style>
</head>
<body class="bg-brand-light text-brand-dark font-sans overflow-x-hidden">

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="fixed top-5 right-5 z-50 bg-red-500 text-white px-6 py-3 rounded shadow-lg animate-fade-in"><i class="fas fa-exclamation-circle mr-2"></i> <%= error %></div>
    <% } %>

    <!-- ================= 1. AUTH SECTION ================= -->
    <% if (mode === 'auth') { %>
        <section class="min-h-screen flex items-center justify-center p-4 bg-[url('https://images.unsplash.com/photo-1469334031218-e382a71b716b?q=80&w=1470&auto=format&fit=crop')] bg-cover bg-center">
            <div class="absolute inset-0 bg-black/40 backdrop-blur-sm"></div>
            <div class="bg-white/95 p-8 rounded-2xl shadow-2xl w-full max-w-md relative z-10 animate-fade-in">
                <div class="text-center mb-8"><h1 class="font-script text-5xl text-brand-gold mb-2">Sakinah</h1><p class="text-gray-500 text-sm tracking-widest uppercase">Platform Undangan Pernikahan Digital</p></div>
                <div class="flex mb-6 bg-gray-100 rounded-lg p-1">
                    <button onclick="toggleAuth('login')" id="btn-login" class="flex-1 py-2 rounded-md text-sm font-bold bg-white shadow-sm text-brand-dark transition-all">Masuk</button>
                    <button onclick="toggleAuth('register')" id="btn-register" class="flex-1 py-2 rounded-md text-sm font-bold text-gray-500 hover:text-brand-dark transition-all">Daftar</button>
                </div>
                <form id="login-form" action="/login" method="POST" class="space-y-4">
                    <input type="email" name="email" required class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-brand-gold" placeholder="Email">
                    <input type="password" name="password" required class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-brand-gold" placeholder="Password">
                    <button type="submit" class="w-full bg-brand-dark text-white py-3 rounded-lg font-bold">Masuk</button>
                </form>
                <form id="register-form" action="/register" method="POST" class="space-y-4 hidden">
                    <input type="text" name="name" required class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-brand-gold" placeholder="Nama Lengkap">
                    <input type="email" name="email" required class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-brand-gold" placeholder="Email">
                    <input type="password" name="password" required class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-brand-gold" placeholder="Password">
                    <button type="submit" class="w-full bg-brand-gold text-white py-3 rounded-lg font-bold">Buat Akun</button>
                </form>
            </div>
        </section>
        <script>function toggleAuth(t){const l=document.getElementById('login-form'),r=document.getElementById('register-form');if(t==='login'){l.classList.remove('hidden');r.classList.add('hidden');}else{l.classList.add('hidden');r.classList.remove('hidden');}}</script>
    <% } %>

    <!-- ================= 2. DASHBOARD SECTION ================= -->
    <% if (mode === 'dashboard') { %>
        <section class="min-h-screen bg-gray-50">
            <nav class="bg-white shadow-sm sticky top-0 z-40">
                <div class="max-w-7xl mx-auto px-4 h-16 flex justify-between items-center">
                    <span class="font-script text-3xl text-brand-gold mr-2">Sakinah</span>
                    <div class="flex items-center space-x-4"><span class="text-sm font-medium text-gray-600">Halo, <%= user.name %></span><a href="/" class="text-sm text-red-500 font-bold">Keluar</a></div>
                </div>
            </nav>
            <main class="max-w-7xl mx-auto py-10 px-4">
                <div class="flex justify-between mb-8">
                    <h2 class="text-2xl font-bold">Dashboard</h2>
                    <a href="/create?user_id=<%= user.id %>" class="px-4 py-2 bg-brand-gold text-white rounded shadow hover:bg-yellow-600">Buat Undangan Baru</a>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <% if(invitations.length === 0) { %>
                        <div class="col-span-3 text-center py-10 text-gray-400 border-2 border-dashed rounded">Belum ada undangan.</div>
                    <% } %>
                    <% invitations.forEach(inv => { %>
                        <div class="bg-white p-6 shadow rounded border-l-4 border-brand-gold">
                            <h3 class="font-bold text-lg"><%= inv.groom_nick %> & <%= inv.bride_nick %></h3>
                            <p class="text-xs text-gray-500 mb-4"><i class="far fa-calendar"></i> <%= new Date(inv.event_date).toLocaleDateString() %></p>
                            <div class="flex gap-2 mt-4">
                                <a href="/u/<%= inv.id %>" target="_blank" class="flex-1 text-center border py-2 rounded text-sm hover:bg-gray-50">Lihat</a>
                                <button onclick="navigator.clipboard.writeText(window.location.origin+'/u/<%= inv.id %>').then(()=>alert('Link Tersalin!'))" class="flex-1 bg-green-600 text-white py-2 rounded text-sm hover:bg-green-700">Share</button>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </main>
        </section>
    <% } %>

    <!-- ================= 3. CREATE FORM SECTION ================= -->
    <% if (mode === 'create') { %>
    <section class="min-h-screen bg-white">
        <nav class="bg-white border-b sticky top-0 z-40">
            <div class="max-w-7xl mx-auto px-4 h-16 flex items-center justify-between">
                <a href="/?user_id=<%= user.id %>" class="text-gray-500 hover:text-brand-dark flex items-center"><i class="fas fa-arrow-left mr-2"></i> Kembali</a>
                <h1 class="font-bold text-lg">Buat Undangan Baru</h1>
                <div class="w-20"></div> 
            </div>
        </nav>

        <div class="max-w-3xl mx-auto py-10 px-4">
            <form action="/create" method="POST" enctype="multipart/form-data" class="space-y-8">
                <input type="hidden" name="user_id" value="<%= user.id %>">
                
                <!-- 1. Data Mempelai (DENGAN UPLOAD FOTO) -->
                <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm">
                    <h3 class="text-lg font-bold text-brand-dark mb-4 border-b pb-2"><i class="fas fa-user-friends mr-2 text-brand-gold"></i> Data Mempelai</h3>
                    
                    <!-- Mempelai Pria -->
                    <div class="mb-6 bg-gray-50 p-4 rounded-lg">
                        <h4 class="font-bold text-brand-gold mb-3">Mempelai Pria</h4>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-3">
                            <input type="text" name="groomName" required class="w-full px-3 py-2 border rounded-md" placeholder="Nama Lengkap Pria">
                            <input type="text" name="groomNick" required class="w-full px-3 py-2 border rounded-md" placeholder="Nama Panggilan Pria">
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-gray-500 mb-1">Foto Mempelai Pria (Opsional)</label>
                            <input type="file" name="groomPhoto" accept="image/*" class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-brand-dark file:text-white hover:file:bg-gray-700"/>
                        </div>
                    </div>

                    <!-- Mempelai Wanita -->
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <h4 class="font-bold text-brand-gold mb-3">Mempelai Wanita</h4>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-3">
                            <input type="text" name="brideName" required class="w-full px-3 py-2 border rounded-md" placeholder="Nama Lengkap Wanita">
                            <input type="text" name="brideNick" required class="w-full px-3 py-2 border rounded-md" placeholder="Nama Panggilan Wanita">
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-gray-500 mb-1">Foto Mempelai Wanita (Opsional)</label>
                            <input type="file" name="bridePhoto" accept="image/*" class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-brand-dark file:text-white hover:file:bg-gray-700"/>
                        </div>
                    </div>
                </div>

                <!-- 2. Detail Acara -->
                <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm">
                    <h3 class="text-lg font-bold text-brand-dark mb-4 border-b pb-2"><i class="fas fa-calendar-alt mr-2 text-brand-gold"></i> Detail Acara</h3>
                    <div class="grid grid-cols-1 gap-6">
                        <input type="datetime-local" name="eventDate" required class="w-full px-3 py-2 border rounded-md focus:ring-brand-gold">
                        <textarea name="location" rows="2" required class="w-full px-3 py-2 border rounded-md focus:ring-brand-gold" placeholder="Alamat lengkap lokasi..."></textarea>
                        <textarea name="message" rows="3" class="w-full px-3 py-2 border rounded-md focus:ring-brand-gold" placeholder="Ayat suci atau kata mutiara..."></textarea>
                    </div>
                </div>

                <!-- 3. Amplop Digital -->
                <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm border-l-4 border-l-brand-gold">
                    <h3 class="text-lg font-bold text-brand-dark mb-4 border-b pb-2"><i class="fas fa-wallet mr-2 text-brand-gold"></i> Amplop Digital</h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <input type="text" name="bankName" class="w-full px-3 py-2 border rounded-md" placeholder="Nama Bank (BCA)">
                        <input type="text" name="accountNumber" class="w-full px-3 py-2 border rounded-md" placeholder="No. Rekening">
                        <input type="text" name="accountHolder" class="w-full px-3 py-2 border rounded-md" placeholder="Atas Nama">
                    </div>
                </div>

                <!-- 4. Love Story -->
                <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm">
                    <h3 class="text-lg font-bold text-brand-dark mb-4"><i class="fas fa-heart mr-2 text-brand-gold"></i> Love Story</h3>
                    <% for(let i=1; i<=3; i++) { %>
                    <div class="mb-4 bg-gray-50 p-4 rounded-lg">
                        <div class="grid grid-cols-3 gap-2 mb-2">
                            <input type="text" name="story_year_<%=i%>" placeholder="Tahun" class="col-span-1 px-3 py-2 border rounded-md text-sm">
                            <input type="text" name="story_title_<%=i%>" placeholder="Judul" class="col-span-2 px-3 py-2 border rounded-md text-sm">
                        </div>
                        <textarea name="story_content_<%=i%>" rows="2" placeholder="Cerita..." class="w-full px-3 py-2 border rounded-md text-sm"></textarea>
                    </div>
                    <% } %>
                </div>

                <!-- 5. Galeri Foto -->
                <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm">
                    <h3 class="text-lg font-bold text-brand-dark mb-4"><i class="fas fa-camera mr-2 text-brand-gold"></i> Galeri Foto</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <% for(let i=1; i<=4; i++) { %>
                            <div>
                                <label class="block text-xs font-bold text-gray-600 mb-1">Foto Galeri <%= i %></label>
                                <input type="file" name="gallery_<%=i%>" accept="image/*" class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-brand-gold file:text-white hover:file:bg-yellow-600"/>
                            </div>
                        <% } %>
                    </div>
                </div>

                <div class="flex justify-end pt-4">
                    <button type="submit" class="px-8 py-3 bg-brand-gold text-white font-bold rounded-lg shadow-lg hover:bg-yellow-600 transition-all transform hover:-translate-y-1">Simpan & Buat Undangan</button>
                </div>
            </form>
        </div>
    </section>
    <% } %>

</body>
</html>
                        <div class="text-center">
                            <div class="text-5xl font-serif font-bold mb-2 text-brand-cream"><%= dayName %></div>
                            <div class="text-xl uppercase tracking-widest mb-4 border-b border-brand-gold/50 pb-2 inline-block"><%= fullDate %></div>
                        </div>
                        
                        <div class="hidden md:block w-[1px] h-32 bg-gradient-to-b from-transparent via-brand-gold to-transparent"></div>
                        
                        <div class="text-center md:text-left space-y-4">
                            <div>
                                <h3 class="text-xl font-bold mb-1 text-brand-gold"><i class="fas fa-rings mr-2"></i> AKAD & RESEPSI</h3>
                                <p class="text-gray-300 text-lg"><i class="far fa-clock mr-2"></i> <%= timeStr %> - Selesai</p>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold mb-1 text-brand-gold"><i class="fas fa-map-marked-alt mr-2"></i> LOKASI</h3>
                                <p class="text-gray-300 text-sm max-w-xs mx-auto md:mx-0"><%= inv.location %></p>
                            </div>
                        </div>
                    </div>
                    
                    <a href="https://maps.google.com/?q=<%= inv.location %>" target="_blank" class="mt-12 inline-block bg-brand-gold text-brand-dark px-10 py-3 rounded-full font-bold text-sm hover:bg-white transition hover:shadow-[0_0_20px_rgba(212,175,55,0.6)] transform hover:-translate-y-1">
                        <i class="fas fa-location-arrow mr-2"></i> Buka Google Maps
                    </a>
                </div>
            </div>
        </section>

        <!-- 5. LOVE STORY -->

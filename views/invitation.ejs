<!DOCTYPE html>
<html lang="id" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pernikahan <%= invitation.groom_nick %> & <%= invitation.bride_nick %></title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Great+Vibes&family=Lato:wght@300;400;700&family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Noto+Serif+Javanese&display=swap" rel="stylesheet">
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- AOS Animation Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        brand: {
                            gold: '#D4AF37', /* Emas Batik */
                            brown: '#5D4037', /* Cokelat Tua */
                            cream: '#F5F5DC', /* Krem Tulang */
                            dark: '#2C1810', /* Hitam Kecoklatan */
                            light: '#FAF3E0'
                        }
                    },
                    fontFamily: {
                        script: ['"Great Vibes"', 'cursive'],
                        serif: ['"Playfair Display"', 'serif'],
                        sans: ['"Lato"', 'sans-serif'],
                        cinzel: ['"Cinzel"', 'serif'],
                        javanese: ['"Noto Serif Javanese"', 'serif']
                    },
                    animation: {
                        'spin-slow': 'spin 8s linear infinite',
                        'float': 'float 6s ease-in-out infinite',
                        'pulse-slow': 'pulse 3s infinite',
                    },
                    keyframes: {
                        float: {
                            '0%, 100%': { transform: 'translateY(0)' },
                            '50%': { transform: 'translateY(-15px)' },
                        }
                    }
                }
            }
        }
    </script>

    <style>
        /* Base Setup */
        body { overflow-x: hidden; perspective: 1500px; background-color: #2C1810; }
        
        /* Glass Effect Premium */
        .glass-panel {
            background: rgba(255, 252, 240, 0.85); /* Sedikit lebih transparan agar bg terlihat */
            backdrop-filter: blur(8px);
            border: 1px solid rgba(212, 175, 55, 0.3);
            box-shadow: 0 10px 40px -10px rgba(0, 0, 0, 0.2);
        }

        /* BATIK BACKGROUNDS (Sekarang menggunakan bg.jpg) */
        .batik-bg {
            background-image: url('/bg.png');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
        }

        /* 3D Book Animation */
        #book-wrapper {
            position: fixed; top: 0; left: 0; width: 100%; height: 100vh;
            z-index: 100; transform-style: preserve-3d;
            transition: transform 1.5s cubic-bezier(0.645, 0.045, 0.355, 1);
        }
        .book-open #book-wrapper { transform: translateX(-100%); pointer-events: none; }

        /* Front Cover */
        #book-cover {
            position: absolute; top: 0; left: 0; width: 100%; height: 100%;
            background-image: url('https://images.unsplash.com/photo-1515934751635-c81c6bc9a2d8?q=80&w=2070&auto=format&fit=crop');
            background-size: cover; background-position: center;
            transform-origin: left center;
            transition: transform 1.5s cubic-bezier(0.645, 0.045, 0.355, 1);
            z-index: 102; display: flex; align-items: center; justify-content: center;
            box-shadow: inset 20px 0 50px rgba(0,0,0,0.8);
        }
        .book-open #book-cover { transform: rotateY(-130deg); }

        /* Overlay */
        .cover-overlay {
            position: absolute; inset: 0;
            background: rgba(44, 24, 16, 0.7); /* Lebih gelap agar teks emas menonjol */
        }

        /* Isi Undangan */
        #main-content {
            opacity: 0; transition: opacity 1.5s ease-in-out; transition-delay: 0.8s;
        }
        .book-open #main-content { opacity: 1; }

        /* Separator/Divider Cantik */
        .divider-icon {
            display: flex; align-items: center; justify-content: center; margin: 2rem 0;
        }
        .divider-icon::before, .divider-icon::after {
            content: ''; flex: 1; border-bottom: 1px solid #D4AF37; margin: 0 1rem; opacity: 0.5;
        }
        .divider-icon i { color: #D4AF37; font-size: 1.2rem; }

        /* ANIMASI BURUNG */
        .bird-container {
            position: fixed; top: 10%; left: -10%;
            transform: scale(0) translateX(-10vw);
            will-change: transform; z-index: 50; pointer-events: none;
        }
        .bird-img { width: 40px; height: auto; opacity: 0.8; }
        
        .bird-one { animation: fly-right-one 25s linear infinite; top: 15%; }
        .bird-two { animation: fly-right-two 30s linear infinite; animation-delay: 5s; top: 40%; transform: scale(0.7); }
        .bird-three { animation: fly-right-one 35s linear infinite; animation-delay: 12s; top: 25%; transform: scale(0.5); }
        
        @keyframes fly-right-one {
            0% { left: -10%; transform: translateY(0) scale(0.6); }
            25% { transform: translateY(-30px) scale(0.6); }
            50% { transform: translateY(0) scale(0.6); }
            75% { transform: translateY(20px) scale(0.6); }
            100% { left: 110%; transform: translateY(0) scale(0.6); }
        }
        @keyframes fly-right-two {
            0% { left: -10%; transform: translateY(50px) scale(0.8); }
            50% { transform: translateY(-50px) scale(0.8); }
            100% { left: 110%; transform: translateY(50px) scale(0.8); }
        }

        /* Music Control */
        .music-box { animation: spin-slow 4s linear infinite; }
        .music-paused { animation-play-state: paused; }
        
        /* Custom Scrollbar */
        .custom-scrollbar::-webkit-scrollbar { width: 6px; }
        .custom-scrollbar::-webkit-scrollbar-track { background: #f1f1f1; }
        .custom-scrollbar::-webkit-scrollbar-thumb { background: #D4AF37; border-radius: 4px; }
    </style>
</head>
<body class="text-brand-dark font-sans antialiased overflow-hidden" id="main-body">

    <% 
        const inv = invitation; 
        const dateObj = new Date(inv.event_date);
        const days = ['Minggu', 'Senin', 'Selasa', 'Rabu', 'Kamis', 'Jumat', 'Sabtu'];
        const months = ['Januari', 'Februari', 'Maret', 'April', 'Mei', 'Juni', 'Juli', 'Agustus', 'September', 'Oktober', 'November', 'Desember'];
        
        const dayName = days[dateObj.getDay()];
        
        const fullDate = `${dateObj.getDate()} ${months[dateObj.getMonth()]} ${dateObj.getFullYear()}`;
        const timeStr = dateObj.toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' }) + ' WIB';
        const isoDate = inv.event_date; 
    %>


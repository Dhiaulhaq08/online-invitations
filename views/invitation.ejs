                <div class="text-center mb-16" data-aos="fade-up">
                    <div class="divider-icon"><i class="fas fa-heart"></i></div>
                    <h2 class="font-script text-5xl text-brand-dark">Kisah Cinta Kami</h2>
                    <p class="text-brand-brown text-sm mt-2 font-serif italic">Setiap cerita adalah anugerah...</p>
                </div>
                <div class="relative py-4">
                    <div class="absolute left-1/2 transform -translate-x-1/2 w-[2px] h-full bg-brand-gold/30"></div>
                    
                    <% inv.love_story.forEach((story, idx) => { 
                        const isLeft = idx % 2 === 0;
                    %>
                    <div class="relative z-10 mb-16 w-full flex <%= isLeft ? 'justify-start' : 'justify-end' %>">
                        <div class="w-5/12 <%= isLeft ? 'text-right pr-8' : 'text-left pl-8' %>" data-aos="<%= isLeft ? 'fade-right' : 'fade-left' %>">
                            <div class="bg-white p-6 rounded-xl shadow-md border-b-4 border-brand-gold relative group hover:bg-brand-light transition">
                                <span class="absolute top-4 <%= isLeft ? 'right-4' : 'left-4' %> inline-block px-3 py-1 bg-brand-brown text-white text-xs font-bold rounded-full"><%= story.year %></span>
                                <h4 class="font-cinzel font-bold text-brand-dark text-lg mt-6 mb-2"><%= story.title %></h4>
                                <p class="text-sm text-gray-600 italic leading-relaxed"><%= story.content %></p>
                            </div>
                        </div>
                        <div class="absolute left-1/2 transform -translate-x-1/2 w-6 h-6 bg-brand-gold rounded-full border-4 border-white shadow z-20"></div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </section>
        <% } %>


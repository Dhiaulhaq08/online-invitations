            <div class="max-w-6xl mx-auto">
                <!-- Gallery -->
                <% if (inv.gallery && inv.gallery.length > 0) { %>
                <div class="text-center mb-16" data-aos="fade-down">
                    <h2 class="font-script text-5xl text-brand-dark">Galeri Momen</h2>
                    <p class="text-brand-brown mt-2 italic">Kebahagiaan yang terabadikan</p>
                </div>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 auto-rows-[250px] mb-24">
                    <% inv.gallery.forEach((url, index) => { 
                        const spanClass = (index === 0) ? 'col-span-2 row-span-2' : 'col-span-1 row-span-1';
                    %>
                    <div class="relative overflow-hidden rounded-xl shadow-lg cursor-pointer group <%= spanClass %> border-4 border-white" data-aos="fade-up" data-aos-delay="<%= index * 100 %>" onclick="openLightbox('<%= url %>')">
                        <img src="<%= url %>" class="w-full h-full object-cover transform transition duration-700 group-hover:scale-110 filter sepia-[0.2] group-hover:sepia-0">
                        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition duration-300 flex items-center justify-center">
                            <i class="fas fa-search-plus text-white opacity-0 group-hover:opacity-100 text-3xl transform scale-50 group-hover:scale-100 transition"></i>
                        </div>
                    </div>
                    <% }) %>
                </div>
                <% } %>

                <!-- Bank Info -->
                <% if (inv.bank_name && inv.account_number) { %>
                <div class="max-w-2xl mx-auto text-center" data-aos="zoom-in">
                    <div class="bg-white p-10 rounded-2xl shadow-2xl border border-brand-gold relative overflow-hidden">
                        <div class="absolute top-0 right-0 w-24 h-24 bg-brand-gold/10 rounded-bl-full"></div>
                        <div class="absolute bottom-0 left-0 w-24 h-24 bg-brand-gold/10 rounded-tr-full"></div>
                        
                        <h2 class="font-script text-5xl text-brand-brown mb-4">Tanda Kasih</h2>
                        <p class="text-gray-600 mb-8 text-sm italic leading-relaxed px-4">
                            Doa restu Anda merupakan karunia yang sangat berarti bagi kami. <br>
                            Dan jika memberi adalah ungkapan tanda kasih Anda, Anda dapat memberi kado secara cashless.
                        </p>
                        
                        <div class="flex flex-col items-center relative z-10 bg-gray-50 p-6 rounded-xl border border-dashed border-brand-gold/50">
                            <i class="fas fa-gift text-4xl text-brand-gold mb-4"></i>
                            <h3 class="text-2xl font-bold text-brand-dark"><%= inv.bank_name %></h3>
                            
                            <div class="bg-white px-8 py-3 rounded-lg border border-gray-200 shadow-inner my-4 w-full max-w-sm">
                                <p class="text-2xl font-mono text-brand-brown tracking-widest font-bold" id="rek-num"><%= inv.account_number %></p>
                            </div>
                            
                            <p class="text-sm text-gray-500 mb-6">a.n <strong><%= inv.account_holder %></strong></p>
                            
                            <button onclick="copyRek()" class="bg-brand-brown text-white px-8 py-3 rounded-full text-sm font-bold hover:bg-brand-gold transition shadow-lg flex items-center gap-3 transform hover:-translate-y-1">
                                <i class="far fa-copy"></i> Salin Nomor Rekening
                            </button>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </section>

        <!-- 7. GUEST BOOK (Wishes) -->
        <section id="wishes" class="py-24 px-4 relative z-10">
            <div class="max-w-3xl mx-auto">
                <div class="text-center mb-10" data-aos="fade-down">
                    <h2 class="font-script text-5xl text-brand-dark">Ucapan & Doa</h2>
                    <p class="text-gray-500 mt-2 font-serif italic">Kirimkan doa restu untuk kebahagiaan kami</p>
                </div>
                
                <div class="glass-panel p-8 rounded-2xl shadow-lg border border-white/50">
                    <!-- Form -->
                    <form action="/u/<%= inv.id %>/comment" method="POST" class="space-y-5 mb-12" data-aos="fade-up" onsubmit="handleFormSubmit()">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                            <div>
                                <label class="block text-xs font-bold text-brand-brown uppercase mb-1 ml-1">Nama Lengkap</label>
                                <input type="text" name="guest_name" required class="w-full px-4 py-3 bg-white/80 border border-brand-gold/30 rounded-lg focus:border-brand-gold focus:ring-1 focus:ring-brand-gold outline-none transition" placeholder="Nama Anda...">
                            </div>
                            <div>
                                <label class="block text-xs font-bold text-brand-brown uppercase mb-1 ml-1">Konfirmasi Kehadiran</label>
                                <select name="attendance" class="w-full px-4 py-3 bg-white/80 border border-brand-gold/30 rounded-lg focus:border-brand-gold focus:ring-1 focus:ring-brand-gold outline-none transition cursor-pointer">
                                    <option value="Hadir">Saya akan Hadir</option>
                                    <option value="Tidak Hadir">Maaf, Tidak Bisa Hadir</option>
                                    <option value="Masih Ragu">Masih Ragu-ragu</option>
                                </select>
                            </div>
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-brand-brown uppercase mb-1 ml-1">Ucapan & Doa</label>
                            <textarea name="message" rows="3" required class="w-full px-4 py-3 bg-white/80 border border-brand-gold/30 rounded-lg focus:border-brand-gold focus:ring-1 focus:ring-brand-gold outline-none transition" placeholder="Tuliskan doa terbaik Anda..."></textarea>
                        </div>
                        <button type="submit" class="w-full bg-brand-gold text-white py-3 rounded-lg font-bold hover:bg-brand-brown transition shadow-md hover:shadow-xl transform active:scale-95 duration-200">
                            <i class="fas fa-paper-plane mr-2"></i> Kirim Ucapan
                        </button>
                    </form>

                    <div class="divider-icon"><i class="fas fa-comments"></i></div>

                    <!-- List -->
                    <div class="space-y-4 max-h-[500px] overflow-y-auto pr-2 custom-scrollbar">
                        <% if (typeof comments !== 'undefined' && comments.length > 0) { %>
                            <% comments.forEach(c => { 
                                let badgeColor = c.attendance === 'Hadir' ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-600';
                                let badgeIcon = c.attendance === 'Hadir' ? 'fa-check-circle' : 'fa-times-circle';
                            %>
                            <div class="bg-white p-5 rounded-xl border-l-4 border-brand-gold shadow-sm hover:shadow-md transition">
                                <div class="flex justify-between items-start mb-2">
                                    <span class="font-bold text-brand-dark font-cinzel text-lg"><%= c.guest_name %></span>
                                    <span class="text-[10px] px-2 py-1 rounded-full font-bold uppercase <%= badgeColor %> flex items-center gap-1">
                                        <i class="fas <%= badgeIcon %>"></i> <%= c.attendance %>
                                    </span>
                                </div>
                                <p class="text-sm text-gray-700 italic leading-relaxed">"<%= c.message %>"</p>
                                <div class="mt-3 text-[10px] text-gray-400 flex items-center gap-1">
                                    <i class="far fa-clock"></i> <%= new Date(c.created_at).toLocaleDateString('id-ID') %>
                                </div>
                            </div>
                            <% }) %>
                        <% } else { %>
                            <div class="text-center py-8 text-gray-500 italic bg-white/50 rounded-lg border border-dashed border-gray-300">
                                Belum ada ucapan. Jadilah yang pertama mengirimkan doa!
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </section>

        <!-- CLOSING PRAYER -->
        <section class="py-20 text-center relative z-10 px-4">
            <div class="max-w-2xl mx-auto">
                <p class="font-serif italic text-brand-dark leading-loose text-lg">
                    Merupakan suatu kehormatan dan kebahagiaan bagi kami apabila Bapak/Ibu/Saudara/i berkenan hadir untuk memberikan doa restu kepada kami.
                    <br><br>
                    Atas kehadiran dan doa restunya, kami ucapkan terima kasih.
                </p>
                <h2 class="font-script text-4xl text-brand-gold mt-8">Wassalamu'alaikum Wr. Wb.</h2>
                <div class="mt-8 font-cinzel text-xl font-bold text-brand-brown">
                    <%= inv.groom_nick %> & <%= inv.bride_nick %>
                </div>
                <p class="text-xs text-gray-500 mt-2 uppercase tracking-widest">Beserta Keluarga Besar</p>
            </div>
        </section>

        <!-- FOOTER -->
        <footer class="bg-brand-dark py-8 text-center text-white relative z-10 border-t-4 border-brand-gold">
            <p class="text-sm font-serif italic mb-2">Terima kasih telah menjadi bagian dari hari bahagia kami.</p>
            <p class="text-[10px] opacity-50">&copy; 2025 Sakinah Invitation. All Rights Reserved.</p>
        </footer>
    </div>

    <!-- LIGHTBOX -->
    <div id="lightbox" class="fixed inset-0 z-[300] bg-black/95 hidden flex items-center justify-center p-4 opacity-0 pointer-events-none transition-opacity duration-300" onclick="closeLightbox()">
        <button class="absolute top-4 right-4 text-white text-4xl hover:text-brand-gold transition">&times;</button>
        <img id="lightbox-img" src="" class="max-w-full max-h-[90vh] rounded shadow-2xl transform scale-90 transition duration-300 border-4 border-brand-gold">
    </div>

    <!-- SCRIPTS -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({ duration: 1000, once: true });

        // Countdown Logic
        const eventDateStr = "<%= isoDate %>"; 
        if(eventDateStr) {
            const targetDate = new Date(eventDateStr).getTime();
            const timer = setInterval(() => {
                const now = new Date().getTime();
                const distance = targetDate - now;

                if (distance < 0) {
                    clearInterval(timer);
                    document.getElementById('countdown').innerHTML = "<div class='text-xl font-bold w-full text-center text-brand-gold bg-black/50 p-3 rounded-lg'>Alhamdulillah, Acara Telah Selesai</div>";
                    return;
                }

                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                document.getElementById('cd-days').innerText = days < 10 ? '0'+days : days;
                document.getElementById('cd-hours').innerText = hours < 10 ? '0'+hours : hours;
                document.getElementById('cd-minutes').innerText = minutes < 10 ? '0'+minutes : minutes;
                document.getElementById('cd-seconds').innerText = seconds < 10 ? '0'+seconds : seconds;
            }, 1000);
        }

        // Audio & Animation Logic
        const bgMusic = document.getElementById('bg-music');
        const birdSfx = document.getElementById('bird-sfx');
        const musicControl = document.getElementById('music-control');
        const body = document.body;

        function openInvitation() {
            // Play Music & Birds
            const playPromise = bgMusic.play();
            if (playPromise !== undefined) {
                playPromise.then(() => {
                    birdSfx.play().catch(e => console.log("Bird SFX Error", e));
                    birdSfx.volume = 0.2; // Volume burung pelan
                    bgMusic.volume = 0.5; // Musik latar sedang
                    musicControl.classList.remove('hidden');
                }).catch(e => {
                    console.log("Audio autoplay blocked", e);
                    alert("Silakan klik ikon musik di pojok kiri bawah untuk memutar audio.");
                    musicControl.classList.remove('hidden');
                    musicControl.innerHTML = '<i class="fas fa-play text-2xl text-brand-brown"></i>';
                    musicControl.parentElement.classList.add('music-paused');
                });
            }

            // Trigger Book Animation
            body.classList.add('book-open');
            body.classList.remove('overflow-hidden');
            
            // Trigger animation for content inside
            setTimeout(() => {
                AOS.refresh();
            }, 1000);
        }

        function toggleMusic() {
            const icon = document.getElementById('music-icon');
            if (bgMusic.paused) {
                bgMusic.play();
                birdSfx.play();
                icon.parentElement.classList.remove('music-paused');
                icon.className = "fas fa-compact-disc text-2xl text-brand-brown music-box";
            } else {
                bgMusic.pause();
                birdSfx.pause();
                icon.parentElement.classList.add('music-paused');
                icon.className = "fas fa-play text-2xl text-brand-brown";
            }
        }

        function copyRek() {
            const num = document.getElementById('rek-num').innerText;
            // Fallback for iframe environments where clipboard might be restricted
            if (navigator.clipboard) {
                navigator.clipboard.writeText(num).then(() => alert('Nomor Rekening Berhasil Disalin!')).catch(err => alert('Gagal menyalin otomatis, silakan salin manual.'));
            } else {
                alert('Nomor rekening: ' + num);
            }
        }

        // Lightbox
        const lb = document.getElementById('lightbox');
        const lbImg = document.getElementById('lightbox-img');
        function openLightbox(url) {
            lb.classList.remove('hidden', 'pointer-events-none');
            setTimeout(() => { lb.classList.remove('opacity-0'); lbImg.classList.add('scale-100'); }, 10);
            lbImg.src = url;
        }
        function closeLightbox() {
            lb.classList.add('opacity-0'); lbImg.classList.remove('scale-100');
            setTimeout(() => { lb.classList.add('hidden', 'pointer-events-none'); lbImg.src = ''; }, 300);
        }

        // --- NEW LOGIC: Handle Form Submit & Auto Open ---
        function handleFormSubmit() {
            sessionStorage.setItem('formSubmitted', 'true');
        }

        window.addEventListener('load', () => {
            if (sessionStorage.getItem('formSubmitted') === 'true') {
                sessionStorage.removeItem('formSubmitted');
                
                // Open Book UI immediately
                body.classList.add('book-open');
                body.classList.remove('overflow-hidden');
                
                // Show Music Control (paused initially to respect auto-play policy)
                musicControl.classList.remove('hidden');
                const icon = document.getElementById('music-icon');
                if(icon) {
                    icon.className = "fas fa-play text-2xl text-brand-brown";
                    icon.parentElement.classList.add('music-paused');
                }

                // Refresh AOS & Scroll to wishes
                setTimeout(() => {
                    AOS.refresh();
                    const wishes = document.getElementById('wishes');
                    if(wishes) wishes.scrollIntoView({ behavior: 'smooth' });
                }, 500);
            }
        });
    </script>
</body>
</html>